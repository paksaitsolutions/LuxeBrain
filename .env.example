# LuxeBrain AI - Environment Variables
# Copyright Â© 2024 Paksa IT Solutions

# ======================
# APPLICATION SETTINGS
# ======================
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# ======================
# DATABASE
# ======================
DATABASE_URL=sqlite:///./luxebrain.db
# For PostgreSQL: postgresql://user:password@localhost:5432/luxebrain
DATABASE_POOL_SIZE=10

# ======================
# REDIS
# ======================
REDIS_URL=redis://localhost:6379/0

# ======================
# JWT & SECURITY
# ======================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ======================
# OAUTH (Optional)
# ======================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/callback

# ======================
# STRIPE (BILLING)
# ======================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ======================
# EMAIL SERVICE
# ======================
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@luxebrain.ai
EMAIL_API_KEY=your_sendgrid_api_key
ADMIN_EMAIL=admin@luxebrain.ai

# Option 2: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@luxebrain.ai

# ======================
# SLACK ALERTS
# ======================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ======================
# TWILIO (SMS/WhatsApp)
# ======================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ======================
# AWS (Optional)
# ======================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=luxebrain-storage

# ======================
# WOOCOMMERCE
# ======================
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# ======================
# FRONTEND URLS
# ======================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_TENANT_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3001
NEXT_PUBLIC_MARKETING_URL=http://localhost:3002

# ======================
# MONITORING (Optional)
# ======================
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ======================
# MLFLOW (Optional)
# ======================
MLFLOW_TRACKING_URI=http://localhost:5000
